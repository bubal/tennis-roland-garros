<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_1.xsd">
	
	<persistence-unit name="tennis-test-db" transaction-type="RESOURCE_LOCAL">
		
		<class>com.app.tennis.data.Pays</class>
		<class>com.app.tennis.data.Tournoi</class>
		<class>com.app.tennis.data.Match</class>
		<class>com.app.tennis.data.Arbitre</class>
		<class>com.app.tennis.data.Court</class>
		<class>com.app.tennis.data.NiveauArbitre</class>
		<class>com.app.tennis.data.TypeQualification</class>
		<class>com.app.tennis.data.Joueur</class>
		<class>com.app.tennis.data.Acces</class>
		
		<properties>
            <!-- Configuring JDBC properties -->
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:test;INIT=RUNSCRIPT FROM 'classpath:test-db.sql'"/>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>

            <!-- Hibernate properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.show_sql" value="true"/>

        </properties>

	</persistence-unit>
</persistence>

