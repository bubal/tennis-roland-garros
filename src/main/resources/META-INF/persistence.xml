<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_1.xsd">
	
	<persistence-unit name="tennis-db">

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		
		<class>com.app.tennis.data.Pays</class>
		<class>com.app.tennis.data.Tournoi</class>
		<class>com.app.tennis.data.Match</class>
		<class>com.app.tennis.data.Arbitre</class>
		<class>com.app.tennis.data.Court</class>
		<class>com.app.tennis.data.NiveauArbitre</class>
		<class>com.app.tennis.data.TypeQualification</class>
		<class>com.app.tennis.data.Joueur</class>
		<class>com.app.tennis.data.Acces</class>
		
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.connection.url"
				value="jdbc:mysql://localhost:3306/tennis?useSSL=false" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.username" value="java_user" />
			<property name="hibernate.connection.password" value="j2e" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
		</properties>

	</persistence-unit>
</persistence>

